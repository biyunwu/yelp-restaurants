<% include partials/header %>

    <div class="container" style="margin-top: 20px;">
        <div class="jumbotron">
            <div class="container">
                <h1>Welcome to the Yelp Campground!</h1>
                <p>A hub for campground enthusiasts.</p>
                <a class="btn btn-md btn-primary" href="/new">Add new campground</a>
            </div>
        </div>
    </div>
    
    <div class="container text-center">
      <div class="row">
            <% camps.forEach(function(camp){ %>
            <div class="col-lg-3 col-md-4 col-sm-6" style="margin-bottom: 10px;">
                <a href="/campground/<%= camp._id %>">
                    <div class="card">
                      <img class="card-img-top " src="<%= camp.image%>" alt="An image of <%= camp.name %>">
                      <div class="card-body" style="padding: 10px 10px">
                        <p class="card-text"><%= camp.name %></p>
                      </div>
                    </div>
                </a>
            </div>
            <% });%>
      </div>
    </div>
    
<% include partials/footer %>