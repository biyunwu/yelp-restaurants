<% include ../partials/header %>
<div class="container">
    <h1 style="text-align: center;" >Add new comment for <strong><%= restaurant.name%></strong></h1>
    <div style="width: 30%; margin: 3% auto">
        <img style="width: 100%;" src="<%= restaurant.image %>">
        <hr class="hr_hide">
        <form action="/restaurant/<%= restaurant._id %>/comments/<%= comment._id %>?_method=PUT", method="POST">
            <!--<div class="form-group">-->
            <!--    <input class="form-control" type="tetx", name="comment[author]", placeholder="name"></input>-->
            <!--</div>-->
            <div class="form-group">
            <input class="form-control" type="tetx", name="comment[text]", value="<%= comment.text %>"></input>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/restaurant/<%= restaurant._id %>">Back to <strong><%= restaurant.name%></strong></a>
    </div>
</div>
<% include ../partials/footer %>